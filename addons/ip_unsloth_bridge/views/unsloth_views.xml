<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Settings -->
  <record id="res_config_settings_view_form_unsloth" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.unsloth</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.view_res_config_settings"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='settings']" position="inside">
        <div class="app_settings_block" data-string="Unsloth" string="Unsloth" >
          <h2>Unsloth</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6">
              <div class="o_setting_left_pane">
                <field name="unsloth_base_url"/>
                <div class="text-muted">Base URL of the Unsloth inference API.</div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>

  <!-- Test Wizard -->
  <record id="view_ip_unsloth_wizard_form" model="ir.ui.view">
    <field name="name">ip.unsloth.wizard.form</field>
    <field name="model">ip.unsloth.wizard</field>
    <field name="arch" type="xml">
      <form string="Unsloth Test" create="false" edit="false">
        <group>
          <field name="prompt" placeholder="Type text to send to Unsloth..."/>
          <field name="response" readonly="1"/>
        </group>
        <footer>
          <button name="action_run" string="Run" type="object" class="btn-primary"/>
          <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_ip_unsloth_wizard" model="ir.actions.act_window">
    <field name="name">Unsloth Test</field>
    <field name="res_model">ip.unsloth.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_ip_unsloth_root" name="Unsloth" parent="base.menu_administration" sequence="90"/>
  <menuitem id="menu_ip_unsloth_test" name="Test Inference" parent="menu_ip_unsloth_root"
            action="action_ip_unsloth_wizard" sequence="1"/>
</odoo>
