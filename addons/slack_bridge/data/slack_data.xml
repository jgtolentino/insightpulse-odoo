<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- System Parameters for Slack Configuration -->
        <record id="slack_bot_token_param" model="ir.config_parameter">
            <field name="key">slack.bot_token</field>
            <field name="value"></field>
        </record>

        <record id="slack_signing_secret_param" model="ir.config_parameter">
            <field name="key">slack.signing_secret</field>
            <field name="value"></field>
        </record>

        <!-- Sample Channel Mappings (update with actual channel IDs) -->
        <record id="slack_channel_rim_finance" model="slack.channel">
            <field name="channel_name">#rim-finance</field>
            <field name="channel_id">C_RIM_FINANCE</field>
            <field name="agency_code">RIM</field>
            <field name="channel_type">finance</field>
            <field name="auto_respond" eval="False"/>
        </record>

        <record id="slack_channel_general_finance" model="slack.channel">
            <field name="channel_name">#finance-general</field>
            <field name="channel_id">C_FINANCE_GENERAL</field>
            <field name="channel_type">finance</field>
            <field name="auto_respond" eval="False"/>
        </record>

        <record id="slack_channel_bir_compliance" model="slack.channel">
            <field name="channel_name">#bir-compliance</field>
            <field name="channel_id">C_BIR_COMPLIANCE</field>
            <field name="channel_type">bir</field>
            <field name="auto_respond" eval="False"/>
        </record>
    </data>
</odoo>
