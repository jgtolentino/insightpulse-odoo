<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- IPAI Core Security Groups -->
        <record id="group_ipai_user" model="res.groups">
            <field name="name">IPAI User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Basic IPAI user access</field>
        </record>

        <record id="group_ipai_manager" model="res.groups">
            <field name="name">IPAI Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_ipai_user'))]"/>
            <field name="comment">IPAI manager with full access</field>
        </record>
    </data>
</odoo>
