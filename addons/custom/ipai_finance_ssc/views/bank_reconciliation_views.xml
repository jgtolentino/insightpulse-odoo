<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bank Reconciliation Tree View -->
    <record id="view_bank_reconciliation_tree" model="ir.ui.view">
        <field name="name">finance.ssc.bank.reconciliation.tree</field>
        <field name="model">finance.ssc.bank.reconciliation</field>
        <field name="arch" type="xml">
            <tree string="Bank Reconciliations" decoration-info="state == 'draft'" decoration-warning="state in ('matching', 'review')" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="agency_id"/>
                <field name="bank_account_id"/>
                <field name="reconciliation_date"/>
                <field name="match_rate" widget="progressbar"/>
                <field name="matched_lines"/>
                <field name="unmatched_lines"/>
                <field name="difference" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ('matching', 'review')" decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Bank Reconciliation Form View -->
    <record id="view_bank_reconciliation_form" model="ir.ui.view">
        <field name="name">finance.ssc.bank.reconciliation.form</field>
        <field name="model">finance.ssc.bank.reconciliation</field>
        <field name="arch" type="xml">
            <form string="Bank Reconciliation">
                <header>
                    <button name="action_start_auto_match"
                            string="Start Auto-Match (80% Target)"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_validate_reconciliation"
                            string="Validate &amp; Reconcile"
                            type="object"
                            class="btn-success"
                            attrs="{'invisible': [('state', '!=', 'review')]}"/>
                    <button name="action_reset_to_draft"
                            string="Reset to Draft"
                            type="object"
                            attrs="{'invisible': [('state', 'in', ('draft', 'done'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,matching,review,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_bank_reconciliation_lines)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-check-square-o"
                                context="{'search_default_reconciliation_id': active_id, 'search_default_matched': 1}">
                            <field name="matched_lines" widget="statinfo" string="Matched"/>
                        </button>
                        <button name="%(action_bank_reconciliation_lines)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-question-circle"
                                context="{'search_default_reconciliation_id': active_id, 'search_default_unmatched': 1}">
                            <field name="unmatched_lines" widget="statinfo" string="Unmatched"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Reconciled" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    <widget name="web_ribbon" title="80% Auto-Match" bg_color="bg-info" attrs="{'invisible': ['|', ('state', '!=', 'review'), ('match_rate', '&lt;', 80)]}"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="RECON/2025/001"/>
                        </h1>
                    </div>

                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="agency_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="bank_account_id"/>
                            <field name="reconciliation_date" widget="date"/>
                        </group>
                        <group name="period_info" string="Period">
                            <field name="period_from" widget="date"/>
                            <field name="period_to" widget="date"/>
                        </group>
                    </group>

                    <group>
                        <group string="Balances">
                            <field name="opening_balance" widget="monetary"/>
                            <field name="closing_balance_bank" widget="monetary"/>
                            <field name="closing_balance_odoo" widget="monetary" readonly="1"/>
                            <field name="difference" widget="monetary" readonly="1" class="text-danger"/>
                        </group>
                        <group string="Matching Statistics">
                            <field name="total_bank_lines" readonly="1"/>
                            <field name="matched_lines" readonly="1"/>
                            <field name="unmatched_lines" readonly="1"/>
                            <field name="match_rate" widget="progressbar" readonly="1"/>
                        </group>
                    </group>

                    <group string="Auto-Match Configuration" attrs="{'invisible': [('state', 'not in', ('draft',))]}">
                        <group>
                            <field name="auto_match_enabled" widget="boolean_toggle"/>
                            <field name="match_threshold" widget="integer" attrs="{'invisible': [('auto_match_enabled', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="date_tolerance_days" widget="integer" attrs="{'invisible': [('auto_match_enabled', '=', False)]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="lines" string="Bank Statement Lines">
                            <field name="line_ids" nolabel="1">
                                <tree decoration-success="match_status in ('auto_matched', 'manual_matched')" decoration-muted="match_status == 'reviewed'" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="date" widget="date"/>
                                    <field name="description"/>
                                    <field name="reference"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="match_status" widget="badge"/>
                                    <field name="match_score" widget="progressbar" attrs="{'invisible': [('match_status', '=', 'unmatched')]}"/>
                                    <field name="matched_move_line_id" attrs="{'readonly': [('match_status', 'in', ('auto_matched', 'manual_matched'))]}"/>
                                    <button name="action_manual_match" type="object" icon="fa-link" string="Manual Match" attrs="{'invisible': [('match_status', '!=', 'unmatched')]}"/>
                                    <button name="action_unmatch" type="object" icon="fa-unlink" string="Unmatch" attrs="{'invisible': [('match_status', '=', 'unmatched')]}"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Bank Reconciliation Kanban View -->
    <record id="view_bank_reconciliation_kanban" model="ir.ui.view">
        <field name="name">finance.ssc.bank.reconciliation.kanban</field>
        <field name="model">finance.ssc.bank.reconciliation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="id"/>
                <field name="name"/>
                <field name="agency_id"/>
                <field name="reconciliation_date"/>
                <field name="match_rate"/>
                <field name="difference"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="agency_id"/> - <field name="reconciliation_date"/>
                                    </div>
                                </div>
                                <span class="float-end">
                                    <field name="state" widget="label" class="badge"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <progressbar field="match_rate" title="Match Rate"/>
                                <div>Difference: <field name="difference" widget="monetary"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Bank Reconciliation Search View -->
    <record id="view_bank_reconciliation_search" model="ir.ui.view">
        <field name="name">finance.ssc.bank.reconciliation.search</field>
        <field name="model">finance.ssc.bank.reconciliation</field>
        <field name="arch" type="xml">
            <search string="Search Bank Reconciliations">
                <field name="name" string="Reference"/>
                <field name="agency_id" string="Agency"/>
                <field name="bank_account_id" string="Bank Account"/>

                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Reconciled" name="done" domain="[('state', '=', 'done')]"/>

                <separator/>
                <filter string="High Match Rate (≥80%)" name="high_match_rate" domain="[('match_rate', '&gt;=', 80)]"/>
                <filter string="Has Unmatched Lines" name="has_unmatched" domain="[('unmatched_lines', '&gt;', 0)]"/>
                <filter string="Balanced" name="balanced" domain="[('difference', '=', 0)]"/>
                <filter string="Unbalanced" name="unbalanced" domain="[('difference', '!=', 0)]"/>

                <group expand="0" string="Group By">
                    <filter string="Agency" name="group_agency" context="{'group_by': 'agency_id'}"/>
                    <filter string="Bank Account" name="group_bank" context="{'group_by': 'bank_account_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Reconciliation Date" name="group_date" context="{'group_by': 'reconciliation_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Bank Reconciliation Line Tree View -->
    <record id="view_bank_reconciliation_line_tree" model="ir.ui.view">
        <field name="name">finance.ssc.bank.reconciliation.line.tree</field>
        <field name="model">finance.ssc.bank.reconciliation.line</field>
        <field name="arch" type="xml">
            <tree decoration-success="match_status in ('auto_matched', 'manual_matched')" decoration-muted="match_status == 'reviewed'" editable="bottom">
                <field name="reconciliation_id"/>
                <field name="sequence" widget="handle"/>
                <field name="date" widget="date"/>
                <field name="description"/>
                <field name="reference"/>
                <field name="amount" widget="monetary"/>
                <field name="match_status" widget="badge"/>
                <field name="match_score" widget="progressbar"/>
                <field name="matched_move_line_id"/>
                <button name="action_manual_match" type="object" icon="fa-link" string="Manual Match"/>
                <button name="action_unmatch" type="object" icon="fa-unlink" string="Unmatch"/>
            </tree>
        </field>
    </record>

    <!-- Bank Reconciliation Line Search View -->
    <record id="view_bank_reconciliation_line_search" model="ir.ui.view">
        <field name="name">finance.ssc.bank.reconciliation.line.search</field>
        <field name="model">finance.ssc.bank.reconciliation.line</field>
        <field name="arch" type="xml">
            <search string="Search Reconciliation Lines">
                <field name="description" string="Description"/>
                <field name="reference" string="Reference"/>
                <field name="reconciliation_id" string="Reconciliation"/>

                <filter string="Unmatched" name="unmatched" domain="[('match_status', '=', 'unmatched')]"/>
                <filter string="Auto-Matched" name="auto_matched" domain="[('match_status', '=', 'auto_matched')]"/>
                <filter string="Manual-Matched" name="manual_matched" domain="[('match_status', '=', 'manual_matched')]"/>
                <filter string="Matched" name="matched" domain="[('match_status', 'in', ('auto_matched', 'manual_matched'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Reconciliation" name="group_reconciliation" context="{'group_by': 'reconciliation_id'}"/>
                    <filter string="Match Status" name="group_match_status" context="{'group_by': 'match_status'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Bank Reconciliation Action -->
    <record id="action_bank_reconciliation" model="ir.actions.act_window">
        <field name="name">Bank Reconciliations</field>
        <field name="res_model">finance.ssc.bank.reconciliation</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_review': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a new bank reconciliation
            </p>
            <p>
                Achieve 80% auto-match rate with smart algorithms:
                • Exact amount matching
                • Amount + date tolerance matching
                • Fuzzy description matching
            </p>
        </field>
    </record>

    <!-- Bank Reconciliation Lines Action -->
    <record id="action_bank_reconciliation_lines" model="ir.actions.act_window">
        <field name="name">Reconciliation Lines</field>
        <field name="res_model">finance.ssc.bank.reconciliation.line</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('reconciliation_id', '=', active_id)]</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_bank_reconciliation"
              name="Bank Reconciliation"
              parent="menu_finance_ssc_root"
              action="action_bank_reconciliation"
              sequence="40"/>

</odoo>
