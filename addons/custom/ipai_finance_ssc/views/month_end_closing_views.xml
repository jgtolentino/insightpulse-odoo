<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Month-End Closing Tree View -->
    <record id="view_month_end_closing_tree" model="ir.ui.view">
        <field name="name">finance.ssc.month.end.closing.tree</field>
        <field name="model">finance.ssc.month.end.closing</field>
        <field name="arch" type="xml">
            <tree string="Month-End Closings" decoration-muted="state == 'cancelled'" decoration-success="state == 'done'">
                <field name="name"/>
                <field name="agency_id"/>
                <field name="period"/>
                <field name="closing_date"/>
                <field name="checklist_progress" widget="progressbar"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ('validating', 'accruals', 'depreciation', 'taxes', 'closing')" decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- Month-End Closing Form View -->
    <record id="view_month_end_closing_form" model="ir.ui.view">
        <field name="name">finance.ssc.month.end.closing.form</field>
        <field name="model">finance.ssc.month.end.closing</field>
        <field name="arch" type="xml">
            <form string="Month-End Closing">
                <header>
                    <button name="action_start_closing"
                            string="Start Closing Process"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_validate_transactions"
                            string="Validate Transactions"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'validating')]}"/>
                    <button name="action_process_accruals"
                            string="Process Accruals"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'accruals')]}"/>
                    <button name="action_run_depreciation"
                            string="Run Depreciation"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'depreciation')]}"/>
                    <button name="action_compute_taxes"
                            string="Compute Taxes"
                            type="object"
                            attrs="{'invisible': [('state', '!=', 'taxes')]}"/>
                    <button name="action_finalize_closing"
                            string="Finalize &amp; Lock Period"
                            type="object"
                            class="btn-success"
                            attrs="{'invisible': [('state', '!=', 'closing')]}"/>
                    <button name="action_reopen"
                            string="Reopen"
                            type="object"
                            groups="account.group_account_manager"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            attrs="{'invisible': [('state', 'in', ('done', 'cancelled'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validating,accruals,depreciation,taxes,closing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_trial_balance"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-balance-scale">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Trial</span>
                                <span class="o_stat_text">Balance</span>
                            </div>
                        </button>
                        <button name="action_view_journal_entries"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-book">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Journal</span>
                                <span class="o_stat_text">Entries</span>
                            </div>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Closed" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="MEC/2025-01/001"/>
                        </h1>
                    </div>

                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="agency_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="period" widget="date"/>
                            <field name="closing_date" widget="date"/>
                            <field name="fiscal_year_id" options="{'no_create': True}"/>
                        </group>
                        <group name="progress_info" string="Progress">
                            <field name="checklist_progress" widget="progressbar"/>
                            <field name="checklist_complete" widget="boolean"/>
                            <field name="period_locked" widget="boolean" readonly="1"/>
                            <field name="duration_hours" widget="float_time" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="checklist" string="Checklist">
                            <field name="checklist_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="completed == True">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="responsible_id" widget="many2one_avatar_user"/>
                                    <field name="due_date" widget="date"/>
                                    <field name="completed" widget="boolean_toggle"/>
                                    <field name="completed_date" readonly="1"/>
                                </tree>
                            </field>
                        </page>

                        <page name="trial_balance" string="Trial Balance">
                            <group>
                                <group>
                                    <field name="total_debit" widget="monetary" readonly="1"/>
                                    <field name="total_credit" widget="monetary" readonly="1"/>
                                </group>
                                <group>
                                    <field name="balance_difference" widget="monetary" readonly="1"/>
                                    <field name="is_balanced" widget="boolean" readonly="1"/>
                                </group>
                            </group>
                            <field name="trial_balance_ids" nolabel="1">
                                <tree decoration-danger="balance &lt; 0 and account_type in ('asset', 'income')" decoration-warning="balance > 0 and account_type in ('liability', 'expense')">
                                    <field name="account_code"/>
                                    <field name="account_name"/>
                                    <field name="account_type"/>
                                    <field name="debit" sum="Total Debit" widget="monetary"/>
                                    <field name="credit" sum="Total Credit" widget="monetary"/>
                                    <field name="balance" sum="Balance" widget="monetary"/>
                                </tree>
                            </field>
                        </page>

                        <page name="validation" string="Validation">
                            <group>
                                <group string="Validation Results">
                                    <field name="has_unposted_entries" widget="boolean" readonly="1"/>
                                    <field name="has_unreconciled_items" widget="boolean" readonly="1"/>
                                    <field name="has_missing_tax_returns" widget="boolean" readonly="1"/>
                                </group>
                            </group>
                            <field name="validation_messages" widget="html" readonly="1"/>
                        </page>

                        <page name="notes" string="Notes">
                            <field name="notes" placeholder="Internal notes about this month-end closing..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Month-End Closing Kanban View -->
    <record id="view_month_end_closing_kanban" model="ir.ui.view">
        <field name="name">finance.ssc.month.end.closing.kanban</field>
        <field name="model">finance.ssc.month.end.closing</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="id"/>
                <field name="name"/>
                <field name="agency_id"/>
                <field name="period"/>
                <field name="checklist_progress"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="agency_id"/> - <field name="period"/>
                                    </div>
                                </div>
                                <span class="float-end">
                                    <field name="state" widget="label" class="badge"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <progressbar field="checklist_progress" title="Progress"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Month-End Closing Search View -->
    <record id="view_month_end_closing_search" model="ir.ui.view">
        <field name="name">finance.ssc.month.end.closing.search</field>
        <field name="model">finance.ssc.month.end.closing</field>
        <field name="arch" type="xml">
            <search string="Search Month-End Closings">
                <field name="name" string="Reference"/>
                <field name="agency_id" string="Agency"/>
                <field name="period" string="Period"/>

                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', 'in', ('validating', 'accruals', 'depreciation', 'taxes', 'closing'))]"/>
                <filter string="Closed" name="done" domain="[('state', '=', 'done')]"/>

                <separator/>
                <filter string="Current Month" name="current_month" domain="[('period', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('period', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month" domain="[('period', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')), ('period', '&lt;=', (context_today() - relativedelta(day=1, days=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>
                <filter string="Checklist Incomplete" name="checklist_incomplete" domain="[('checklist_complete', '=', False)]"/>
                <filter string="Unbalanced" name="unbalanced" domain="[('is_balanced', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Agency" name="group_agency" context="{'group_by': 'agency_id'}"/>
                    <filter string="Period" name="group_period" context="{'group_by': 'period'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Checklist Item Tree View -->
    <record id="view_month_end_checklist_tree" model="ir.ui.view">
        <field name="name">finance.ssc.month.end.checklist.tree</field>
        <field name="model">finance.ssc.month.end.checklist</field>
        <field name="arch" type="xml">
            <tree string="Checklist Items" decoration-success="completed == True" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="responsible_id" widget="many2one_avatar_user"/>
                <field name="due_date" widget="date"/>
                <field name="completed" widget="boolean_toggle"/>
                <field name="completed_date" readonly="1"/>
            </tree>
        </field>
    </record>

    <!-- Trial Balance Line Tree View -->
    <record id="view_trial_balance_line_tree" model="ir.ui.view">
        <field name="name">finance.ssc.trial.balance.line.tree</field>
        <field name="model">finance.ssc.trial.balance.line</field>
        <field name="arch" type="xml">
            <tree string="Trial Balance" decoration-danger="balance &lt; 0 and account_type in ('asset', 'income')" decoration-warning="balance > 0 and account_type in ('liability', 'expense')">
                <field name="account_code"/>
                <field name="account_name"/>
                <field name="account_type"/>
                <field name="debit" sum="Total Debit" widget="monetary"/>
                <field name="credit" sum="Total Credit" widget="monetary"/>
                <field name="balance" sum="Balance" widget="monetary"/>
            </tree>
        </field>
    </record>

    <!-- Month-End Closing Action -->
    <record id="action_month_end_closing" model="ir.actions.act_window">
        <field name="name">Month-End Closings</field>
        <field name="res_model">finance.ssc.month.end.closing</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a new month-end closing
            </p>
            <p>
                Automate your month-end closing process from 10 days to 2 days.
                Track progress with checklists, validate transactions, and generate trial balance in 30 seconds.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_month_end_closing"
              name="Month-End Closing"
              parent="menu_finance_ssc_root"
              action="action_month_end_closing"
              sequence="20"/>

</odoo>
