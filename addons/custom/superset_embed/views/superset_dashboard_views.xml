<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_superset_dashboard_tree" model="ir.ui.view">
        <field name="name">superset.dashboard.tree</field>
        <field name="model">superset.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="dashboard_id"/>
                <field name="uuid"/>
                <field name="active"/>
                <button name="refresh_dashboards" type="object" string="Refresh" class="btn-primary"/>
                <button name="unlink" string="Delete" class="btn-danger"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_superset_dashboard_form" model="ir.ui.view">
        <field name="name">superset.dashboard.form</field>
        <field name="model">superset.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="dashboard_id"/>
                        <field name="uuid"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                    <footer>
                        <button name="refresh_dashboards" type="object" string="Refresh from Superset" class="btn-primary"/>
                        <button name="unlink" string="Delete" class="btn-danger"/>
                        <button name="open_dashboard" type="object" string="Open Dashboard" class="btn-success"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_superset_dashboard" model="ir.actions.act_window">
        <field name="name">Superset Dashboards</field>
        <field name="res_model">superset.dashboard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Superset dashboards found. Click Refresh to load from Superset.
            </p>
        </field>
    </record>
</odoo>
