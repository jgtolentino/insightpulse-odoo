<odoo>
  <template id="page" name="Insights">
    <t t-call="website.layout">
      <div style="display:flex;gap:12px;">
        <div style="flex:1;min-height:90vh;">
          <iframe t-if="dashboard_id" t-att-src="'/odoo/dashboards?dashboard_id='+dashboard_id"
                  style="width:100%;height:90vh;border:0;"></iframe>
          <t t-if="not dashboard_id"><p>Provide ?dashboard_id=&lt;id&gt;</p></t>
        </div>
        <div style="width:360px;border-left:1px solid #ddd;padding:12px;">
          <h3>Ask your data</h3><div id="rag-panel"></div>
        </div>
      </div>
    </t>
  </template>
</odoo>
