<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimal Form View -->
    <record id="view_hr_offboarding_form" model="ir.ui.view">
        <field name="name">hr.offboarding.form</field>
        <field name="model">hr.offboarding</field>
        <field name="arch" type="xml">
            <form string="Employee Offboarding">
                <header>
                    <button name="action_submit" string="Submit for Clearance" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_complete" string="Complete" type="object"
                            invisible="state != 'clearance_pending'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,clearance_pending,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="exit_date" readonly="state != 'draft'"/>
                            <field name="exit_reason" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Clearance Checklist" name="checklist">
                            <field name="checklist_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_hr_offboarding_list" model="ir.ui.view">
        <field name="name">hr.offboarding.list</field>
        <field name="model">hr.offboarding</field>
        <field name="arch" type="xml">
            <list string="Employee Offboarding">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="exit_date"/>
                <field name="state" decoration-info="state == 'draft'"
                       decoration-success="state == 'done'" widget="badge"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_offboarding" model="ir.actions.act_window">
        <field name="name">Employee Offboarding</field>
        <field name="res_model">hr.offboarding</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first offboarding record
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hr_offboarding_root"
              name="Offboarding"
              parent="hr.menu_hr_root"
              sequence="50"/>

    <menuitem id="menu_hr_offboarding"
              name="Offboarding Records"
              parent="menu_hr_offboarding_root"
              action="action_hr_offboarding"
              sequence="10"/>
</odoo>
