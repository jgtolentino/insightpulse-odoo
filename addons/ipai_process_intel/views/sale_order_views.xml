<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sale Order Form View Extension -->
    <record id="view_sale_order_form_pi" model="ir.ui.view">
        <field name="name">sale.order.form.pi</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Add Process Intelligence button -->
            <xpath expr="//header/button[@name='action_confirm']" position="after">
                <button name="action_analyze_process_intelligence"
                        string="Analyze O2C Process"
                        type="object"
                        class="btn-primary"
                        icon="fa-chart-line"
                        attrs="{'invisible': [('state', 'in', ['draft', 'sent'])]}"/>
                <button name="action_view_process_diagram"
                        string="View Process Diagram"
                        type="object"
                        class="btn-secondary"
                        icon="fa-project-diagram"
                        attrs="{'invisible': [('x_pi_diagram_url', '=', False)]}"/>
            </xpath>

            <!-- Add Process Intelligence tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Process Intelligence" name="process_intelligence">
                    <group>
                        <group string="Analysis Results">
                            <field name="x_pi_last_analysis"/>
                            <field name="x_pi_conformance_rate" widget="percentage"/>
                            <field name="x_pi_top_bottleneck"/>
                            <field name="x_pi_bottleneck_wait_hours"/>
                        </group>
                        <group string="Diagram">
                            <field name="x_pi_diagram_url" widget="url"/>
                        </group>
                    </group>
                    <group string="Full Analysis Data">
                        <field name="x_pi_analysis_data" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
