<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- Cash Advance Form View -->
    <!-- ============================================ -->
    <record id="view_hr_expense_advance_form" model="ir.ui.view">
        <field name="name">hr.expense.advance.form</field>
        <field name="model">hr.expense.advance</field>
        <field name="arch" type="xml">
            <form string="Cash Advance">
                <header>
                    <button name="action_submit" string="Submit for Approval" type="object"
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_approve_l1" string="Approve (Manager)" type="object"
                            invisible="state != 'submitted'" class="oe_highlight"
                            groups="tbwa_spectra_integration.group_tbwa_manager"/>
                    <button name="action_approve_l2" string="Approve (Finance)" type="object"
                            invisible="state != 'approved_l1'" class="oe_highlight"
                            groups="tbwa_spectra_integration.group_tbwa_finance"/>
                    <button name="action_reject" string="Reject" type="object"
                            invisible="state not in ['submitted', 'approved_l1']"
                            groups="tbwa_spectra_integration.group_tbwa_manager"/>
                    <button name="action_mark_paid" string="Mark as Paid" type="object"
                            invisible="state != 'approved_l2'" class="oe_highlight"
                            groups="tbwa_spectra_integration.group_tbwa_finance"/>
                    <button name="action_create_liquidation" string="Create Liquidation Report"
                            type="object" invisible="state != 'paid'" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved_l1,approved_l2,paid,liquidating,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_hr_expense_advance_list)d" type="action"
                                class="oe_stat_button" icon="fa-list">
                            <field name="name" widget="statinfo" string="Reference"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Employee Information">
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="employee_code"/>
                            <field name="department_id"/>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>
                        <group string="Amount">
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <group string="Purpose">
                        <field name="description" readonly="state != 'draft'" nolabel="1"/>
                        <field name="analytic_account_id" readonly="state != 'draft'"
                               string="Project/Cost Center"/>
                    </group>
                    <notebook>
                        <page string="Approval Workflow" name="approval">
                            <group>
                                <group string="Level 1 Approval (Manager)">
                                    <field name="approver_l1_id" readonly="state not in ['draft', 'submitted']"/>
                                    <field name="approval_l1_date"/>
                                </group>
                                <group string="Level 2 Approval (Finance)">
                                    <field name="approver_l2_id" readonly="state not in ['draft', 'submitted', 'approved_l1']"/>
                                    <field name="approval_l2_date"/>
                                    <field name="approval_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Payment &amp; Liquidation" name="payment">
                            <group>
                                <group string="Payment Information">
                                    <field name="payment_method" readonly="state != 'approved_l2'"/>
                                    <field name="payment_reference" readonly="state != 'approved_l2'"/>
                                    <field name="payment_date"/>
                                </group>
                                <group string="Liquidation">
                                    <field name="liquidation_deadline"/>
                                    <field name="expense_sheet_id" readonly="1"/>
                                    <field name="is_liquidated"/>
                                </group>
                            </group>
                        </page>
                        <page string="Spectra Export" name="export" groups="tbwa_spectra_integration.group_tbwa_finance">
                            <group>
                                <group>
                                    <field name="exported_to_spectra"/>
                                    <field name="export_batch_id"/>
                                </group>
                                <group>
                                    <field name="export_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Additional Information" name="additional">
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Cash Advance List View -->
    <!-- ============================================ -->
    <record id="view_hr_expense_advance_list" model="ir.ui.view">
        <field name="name">hr.expense.advance.list</field>
        <field name="model">hr.expense.advance</field>
        <field name="arch" type="xml">
            <list string="Cash Advances" default_order="date desc, id desc"
                  decoration-muted="state in ['rejected', 'cancelled']"
                  decoration-success="state == 'done'"
                  decoration-info="state in ['draft', 'submitted']"
                  decoration-warning="state == 'paid'">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="amount" sum="Total Amount"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state in ['submitted', 'approved_l1', 'approved_l2']"
                       decoration-warning="state == 'paid'"
                       decoration-danger="state == 'rejected'"/>
                <field name="approval_date"/>
                <field name="payment_date"/>
                <field name="liquidation_deadline"/>
                <field name="is_liquidated"/>
                <field name="exported_to_spectra" groups="tbwa_spectra_integration.group_tbwa_finance"/>
            </list>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Cash Advance Search View -->
    <!-- ============================================ -->
    <record id="view_hr_expense_advance_search" model="ir.ui.view">
        <field name="name">hr.expense.advance.search</field>
        <field name="model">hr.expense.advance</field>
        <field name="arch" type="xml">
            <search string="Cash Advances">
                <field name="name" string="Reference"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="analytic_account_id" string="Project/Cost Center"/>
                <field name="description" string="Purpose"/>

                <filter name="filter_my_advances" string="My Cash Advances"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter name="filter_my_team" string="My Team"
                        domain="[('employee_id.parent_id.user_id', '=', uid)]"
                        groups="tbwa_spectra_integration.group_tbwa_manager"/>

                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_submitted" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                <filter name="filter_approved_l1" string="Approved (Manager)"
                        domain="[('state', '=', 'approved_l1')]"/>
                <filter name="filter_approved_l2" string="Approved (Finance)"
                        domain="[('state', '=', 'approved_l2')]"/>
                <filter name="filter_paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                <filter name="filter_liquidating" string="Liquidating"
                        domain="[('state', '=', 'liquidating')]"/>
                <filter name="filter_done" string="Liquidated" domain="[('state', '=', 'done')]"/>
                <filter name="filter_rejected" string="Rejected" domain="[('state', '=', 'rejected')]"/>

                <separator/>
                <filter name="filter_not_liquidated" string="Not Liquidated"
                        domain="[('state', '=', 'paid'), ('is_liquidated', '=', False)]"/>
                <filter name="filter_overdue_liquidation" string="Overdue Liquidation"
                        domain="[('state', '=', 'paid'), ('liquidation_deadline', '&lt;', context_today().strftime('%Y-%m-%d')), ('is_liquidated', '=', False)]"/>

                <separator/>
                <filter name="filter_not_exported" string="Not Exported"
                        domain="[('exported_to_spectra', '=', False), ('state', 'in', ['approved_l2', 'paid', 'liquidating', 'done'])]"
                        groups="tbwa_spectra_integration.group_tbwa_finance"/>
                <filter name="filter_exported" string="Exported to Spectra"
                        domain="[('exported_to_spectra', '=', True)]"
                        groups="tbwa_spectra_integration.group_tbwa_finance"/>

                <separator/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_last_month" string="Last Month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today() - relativedelta(months=1, day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_department" string="Department" context="{'group_by': 'department_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_analytic_account" string="Project/Cost Center"
                            context="{'group_by': 'analytic_account_id'}"/>
                    <filter name="group_month" string="Month" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Cash Advance Kanban View -->
    <!-- ============================================ -->
    <record id="view_hr_expense_advance_kanban" model="ir.ui.view">
        <field name="name">hr.expense.advance.kanban</field>
        <field name="model">hr.expense.advance</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column"
                    quick_create="false">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="date"/>
                <field name="liquidation_deadline"/>
                <field name="is_liquidated"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="float-end">
                                    <field name="amount" widget="monetary"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="employee_id"/>
                                <br/>
                                <small class="text-muted">
                                    <i class="fa fa-clock-o"/> <field name="date"/>
                                </small>
                                <t t-if="record.liquidation_deadline.raw_value">
                                    <br/>
                                    <small class="text-muted">
                                        <i class="fa fa-calendar"/> Due: <field name="liquidation_deadline"/>
                                    </small>
                                </t>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <t t-if="record.is_liquidated.raw_value">
                                        <span class="badge rounded-pill text-bg-success">Liquidated</span>
                                    </t>
                                    <t t-if="!record.is_liquidated.raw_value and record.state.raw_value == 'paid'">
                                        <span class="badge rounded-pill text-bg-warning">Pending Liquidation</span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Cash Advance Window Action -->
    <!-- ============================================ -->
    <record id="action_hr_expense_advance_list" model="ir.actions.act_window">
        <field name="name">Cash Advances</field>
        <field name="res_model">hr.expense.advance</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_hr_expense_advance_search"/>
        <field name="context">{
            'search_default_filter_my_advances': 1,
            'search_default_filter_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cash advance request
            </p>
            <p>
                Cash advances are used for employees who need funds before business trips or expenses.
                Once approved and paid, employees must liquidate the advance with an expense report within 15 days.
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Cash Advance Action for Managers (My Team) -->
    <!-- ============================================ -->
    <record id="action_hr_expense_advance_manager" model="ir.actions.act_window">
        <field name="name">Team Cash Advances</field>
        <field name="res_model">hr.expense.advance</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_hr_expense_advance_search"/>
        <field name="context">{
            'search_default_filter_my_team': 1,
            'search_default_filter_submitted': 1,
        }</field>
        <field name="domain">[('employee_id.parent_id.user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No cash advances pending your approval
            </p>
            <p>
                Review and approve cash advance requests from your team members.
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- Cash Advance Action for Finance (All) -->
    <!-- ============================================ -->
    <record id="action_hr_expense_advance_finance" model="ir.actions.act_window">
        <field name="name">All Cash Advances</field>
        <field name="res_model">hr.expense.advance</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_hr_expense_advance_search"/>
        <field name="context">{
            'search_default_filter_approved_l1': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No cash advances pending finance approval
            </p>
            <p>
                Review and approve cash advance requests, manage payments, and monitor liquidations.
            </p>
        </field>
    </record>

</odoo>
