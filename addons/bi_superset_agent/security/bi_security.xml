<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_bi_user" model="res.groups">
        <field name="name">BI User</field>
        <field name="category_id" ref="base.module_category_business_intelligence"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_bi_manager" model="res.groups">
        <field name="name">BI Manager</field>
        <field name="category_id" ref="base.module_category_business_intelligence"/>
        <field name="implied_ids" eval="[(4, ref('group_bi_user'))]"/>
    </record>

    <!-- Multi-company Rules -->
    <record id="bi_analytics_comp_rule" model="ir.rule">
        <field name="name">BI Analytics Multi-Company</field>
        <field name="model_id" ref="model_bi_superset_analytics"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="bi_dashboard_comp_rule" model="ir.rule">
        <field name="name">BI Dashboard Multi-Company</field>
        <field name="model_id" ref="model_bi_superset_dashboard"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
