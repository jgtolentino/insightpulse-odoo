<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.bi.agent</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="BI Superset Agent" string="BI Superset Agent" data-key="bi_superset_agent">
                    <h2>BI Superset Agent Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="bi_agent_api_base" class="o_form_label"/>
                                        <field name="bi_agent_api_base" placeholder="http://localhost:8001"/>
                                        <div class="text-muted">
                                            FastAPI agent service URL
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="bi_agent_superset_url" class="o_form_label"/>
                                        <field name="bi_agent_superset_url" placeholder="http://localhost:8088"/>
                                        <div class="text-muted">
                                            Apache Superset instance URL
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="bi_agent_dataset_id" class="o_form_label"/>
                                        <field name="bi_agent_dataset_id"/>
                                        <div class="text-muted">
                                            Default Superset dataset ID for queries
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
