<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="bi_superset_agent.ChartViewer" owl="1">
        <div class="o_bi_chart_container">
            <t t-if="chartUrl">
                <iframe t-att-src="chartUrl" t-att-style="iframeStyle" class="o_bi_chart_frame"/>
            </t>
            <t t-else="">
                <div class="o_bi_loading">
                    <p>No chart available. Run the query first.</p>
                </div>
            </t>
        </div>
    </t>

    <t t-name="bi_superset_agent.page_root" owl="1">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center mb-4">BI Superset Agent</h1>
                    <p class="lead text-center">
                        Natural language analytics powered by AI and Apache Superset.
                    </p>
                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title">Get Started</h5>
                            <p class="card-text">
                                Navigate to BI Analytics â†’ Analytics to create your first query.
                            </p>
                            <a href="/web#action=bi_superset_agent.action_bi_analytics" class="btn btn-primary">
                                Open Analytics
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="bi_superset_agent.chart_view" owl="1">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h2 t-esc="analytics.name"/>
                    <p class="text-muted" t-esc="analytics.query"/>
                    <BiChartViewer chartUrl="analytics.chart_url"/>
                </div>
            </div>
        </div>
    </t>
</templates>
