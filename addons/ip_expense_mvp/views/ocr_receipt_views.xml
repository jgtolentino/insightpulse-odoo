<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="ip_ocr_receipt_tree" model="ir.ui.view">
    <field name="name">ip.ocr.receipt.tree</field>
    <field name="model">ip.ocr.receipt</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="uploader_id"/>
        <field name="line_count"/>
        <field name="create_date"/>
      </tree>
    </field>
  </record>

  <record id="ip_ocr_receipt_form" model="ir.ui.view">
    <field name="name">ip.ocr.receipt.form</field>
    <field name="model">ip.ocr.receipt</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_create_expense" type="object" string="Create Expense"
                  class="oe_highlight" invisible="expense_id"/>
          <button name="action_view_expense" type="object" string="View Expense"
                  invisible="not expense_id"/>
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box">
            <button name="action_view_expense" type="object" class="oe_stat_button"
                    icon="fa-money" invisible="not expense_id">
              <field name="expense_count" widget="statinfo" string="Expense"/>
            </button>
          </div>
          <group>
            <field name="name"/>
            <field name="uploader_id"/>
            <field name="line_count"/>
            <field name="expense_id" invisible="1"/>
          </group>
          <group string="OCR JSON">
            <field name="ocr_json" widget="ace" options="{'mode':'json'}"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_ip_ocr_receipt" model="ir.actions.act_window">
    <field name="name">OCR Receipts</field>
    <field name="res_model">ip.ocr.receipt</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_ip_ocr_receipt_root" name="OCR Receipts" sequence="99"/>
  <menuitem id="menu_ip_ocr_receipt" parent="menu_ip_ocr_receipt_root"
            action="action_ip_ocr_receipt" sequence="1"/>
</odoo>
