<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ip_ocr_receipt_tree" model="ir.ui.view">
        <field name="name">ip.ocr.receipt.tree</field>
        <field name="model">ip.ocr.receipt</field>
        <field name="arch" type="xml">
            <tree string="OCR Receipts">
                <field name="name"/>
                <field name="uploaded_by"/>
                <field name="upload_date"/>
                <field name="line_count"/>
                <field name="avg_confidence" widget="percentage"/>
                <field name="total_amount" sum="Total"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ip_ocr_receipt_form" model="ir.ui.view">
        <field name="name">ip.ocr.receipt.form</field>
        <field name="model">ip.ocr.receipt</field>
        <field name="arch" type="xml">
            <form string="OCR Receipt">
                <header>
                    <button name="action_create_expense" type="object"
                            string="Create Expense" class="oe_highlight"
                            invisible="state == 'expense_created' or not ocr_json"/>
                    <button name="action_view_expense" type="object"
                            string="View Expense"
                            invisible="not expense_id"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,processed,expense_created"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="filename" readonly="1"/>
                            <field name="uploaded_by" readonly="1"/>
                            <field name="upload_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="line_count" readonly="1"/>
                            <field name="avg_confidence" widget="percentage" readonly="1"/>
                            <field name="total_amount"/>
                            <field name="currency_id"/>
                            <field name="expense_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Extracted Text" name="text">
                            <field name="ocr_text" widget="text" readonly="1"
                                   placeholder="No text extracted yet"/>
                        </page>
                        <page string="OCR JSON" name="json">
                            <field name="ocr_json" widget="ace"
                                   options="{'mode': 'json'}" readonly="1"
                                   placeholder="No OCR data available"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ip_ocr_receipt_search" model="ir.ui.view">
        <field name="name">ip.ocr.receipt.search</field>
        <field name="model">ip.ocr.receipt</field>
        <field name="arch" type="xml">
            <search string="Search OCR Receipts">
                <field name="name"/>
                <field name="filename"/>
                <field name="uploaded_by"/>
                <filter string="My Receipts" name="my_receipts"
                        domain="[('uploaded_by', '=', uid)]"/>
                <filter string="Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Processed" name="processed"
                        domain="[('state', '=', 'processed')]"/>
                <filter string="Expense Created" name="expense_created"
                        domain="[('state', '=', 'expense_created')]"/>
                <group expand="0" string="Group By">
                    <filter string="Uploaded By" name="group_uploaded_by"
                            context="{'group_by': 'uploaded_by'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Upload Date" name="group_upload_date"
                            context="{'group_by': 'upload_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ip_ocr_receipt" model="ir.actions.act_window">
        <field name="name">OCR Receipts</field>
        <field name="res_model">ip.ocr.receipt</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_receipts': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload receipts via mobile endpoint
            </p>
            <p>
                POST receipts to <code>/ip/mobile/receipt</code> with multipart file upload.<br/>
                OCR results will appear here for admin review.
            </p>
        </field>
    </record>
</odoo>
