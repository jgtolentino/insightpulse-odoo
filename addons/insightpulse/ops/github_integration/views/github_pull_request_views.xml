<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- GitHub Pull Request Tree View -->
    <record id="view_github_pull_request_tree" model="ir.ui.view">
        <field name="name">github.pull.request.tree</field>
        <field name="model">github.pull.request</field>
        <field name="arch" type="xml">
            <tree string="GitHub Pull Requests">
                <field name="number"/>
                <field name="title"/>
                <field name="repository_name"/>
                <field name="author"/>
                <field name="state"/>
                <field name="approvals"/>
                <field name="merged"/>
                <field name="created_at"/>
            </tree>
        </field>
    </record>

    <!-- GitHub Pull Request Form View -->
    <record id="view_github_pull_request_form" model="ir.ui.view">
        <field name="name">github.pull.request.form</field>
        <field name="model">github.pull.request</field>
        <field name="arch" type="xml">
            <form string="GitHub Pull Request">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_open_url)d" type="action"
                                class="oe_stat_button" icon="fa-github"
                                context="{'url': url}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">View on GitHub</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="title"/>
                        </h1>
                        <h3>
                            <field name="repository_name"/> #<field name="number"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="author"/>
                            <field name="head_ref"/>
                            <field name="base_ref"/>
                        </group>
                        <group>
                            <field name="approvals"/>
                            <field name="merged"/>
                            <field name="created_at"/>
                            <field name="closed_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="body"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- GitHub Pull Request Action -->
    <record id="action_github_pull_request" model="ir.actions.act_window">
        <field name="name">Pull Requests</field>
        <field name="res_model">github.pull.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No pull requests found
            </p>
            <p>
                Pull requests are automatically tracked when webhooks are received.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_github_pull_request"
              name="Pull Requests"
              parent="menu_github_integration"
              action="action_github_pull_request"
              sequence="20"/>
</odoo>
