<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- GitHub Issue Tree View -->
    <record id="view_github_issue_tree" model="ir.ui.view">
        <field name="name">github.issue.tree</field>
        <field name="model">github.issue</field>
        <field name="arch" type="xml">
            <tree string="GitHub Issues">
                <field name="number"/>
                <field name="title"/>
                <field name="repository_name"/>
                <field name="author"/>
                <field name="state"/>
                <field name="odoo_task_id"/>
                <field name="created_at"/>
            </tree>
        </field>
    </record>

    <!-- GitHub Issue Form View -->
    <record id="view_github_issue_form" model="ir.ui.view">
        <field name="name">github.issue.form</field>
        <field name="model">github.issue</field>
        <field name="arch" type="xml">
            <form string="GitHub Issue">
                <header>
                    <button name="action_view_task" string="View Odoo Task"
                            type="object" class="oe_highlight"
                            attrs="{'invisible': [('odoo_task_id', '=', False)]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title"/>
                        </h1>
                        <h3>
                            <field name="repository_name"/> #<field name="number"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="author"/>
                            <field name="url" widget="url"/>
                            <field name="odoo_task_id"/>
                        </group>
                        <group>
                            <field name="created_at"/>
                            <field name="updated_at"/>
                            <field name="closed_at"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="body"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- GitHub Issue Action -->
    <record id="action_github_issue" model="ir.actions.act_window">
        <field name="name">Issues</field>
        <field name="res_model">github.issue</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No issues found
            </p>
            <p>
                Issues are automatically tracked when webhooks are received.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_github_issue"
              name="Issues"
              parent="menu_github_integration"
              action="action_github_issue"
              sequence="30"/>
</odoo>
