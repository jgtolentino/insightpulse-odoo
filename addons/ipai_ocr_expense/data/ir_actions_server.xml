<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Example server action: re-send all pending expenses to OCR -->
    <record id="ipai_ocr_expense_resend_pending" model="ir.actions.server">
        <field name="name">IPAI: Resend Pending Expenses to OCR</field>
        <field name="model_id" ref="hr_expense.model_hr_expense"/>
        <field name="state">code</field>
        <field name="code"><![CDATA[
records.filtered(lambda e: e.ocr_status == "pending").action_send_to_ocr()
        ]]></field>
    </record>

</odoo>
