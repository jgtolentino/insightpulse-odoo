<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_agent_user" model="res.groups">
        <field name="name">AI Agent User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="comment">Basic access to AI agent features</field>
    </record>

    <record id="group_deployer" model="res.groups">
        <field name="name">Deployer</field>
        <field name="category_id" ref="base.module_category_administration"/>
        <field name="comment">Can trigger deployments via AI agent</field>
    </record>

    <record id="group_agent_admin" model="res.groups">
        <field name="name">AI Agent Admin</field>
        <field name="category_id" ref="base.module_category_administration"/>
        <field name="implied_ids" eval="[(4, ref('group_agent_user')), (4, ref('group_deployer'))]"/>
        <field name="comment">Full access to AI agent configuration</field>
    </record>

    <!-- Record Rules -->
    <record id="agent_log_user_rule" model="ir.rule">
        <field name="name">Users can only see their own agent logs</field>
        <field name="model_id" ref="model_ipai_agent_log"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_agent_user'))]"/>
    </record>

    <record id="agent_log_admin_rule" model="ir.rule">
        <field name="name">Admins can see all agent logs</field>
        <field name="model_id" ref="model_ipai_agent_log"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_agent_admin'))]"/>
    </record>
</odoo>
