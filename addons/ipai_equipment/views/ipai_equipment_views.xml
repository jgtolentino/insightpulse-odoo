<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extend Maintenance Equipment Form -->
        <record id="hr_equipment_view_form_inherit_ipai" model="ir.ui.view">
            <field name="name">maintenance.equipment.form.inherit.ipai</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_bookings" type="object" string="Bookings"
                            class="oe_stat_button" icon="fa-calendar">
                        <field name="booking_count" widget="statinfo"/>
                    </button>
                    <button name="action_view_incidents" type="object" string="Incidents"
                            class="oe_stat_button" icon="fa-exclamation-triangle">
                        <field name="incident_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='serial_no']" position="after">
                    <field name="equipment_code"/>
                    <field name="condition"/>
                    <field name="status"/>
                    <field name="current_custodian_id"/>
                </xpath>
            </field>
        </record>

        <!-- Extend Maintenance Equipment Kanban -->
        <record id="hr_equipment_view_kanban_inherit_ipai" model="ir.ui.view">
            <field name="name">maintenance.equipment.kanban.inherit.ipai</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_record_body')]" position="inside">
                    <div class="mt-1">
                        <span class="badge text-bg-info" t-if="record.status.raw_value == 'available'">Available</span>
                        <span class="badge text-bg-warning" t-if="record.status.raw_value == 'reserved'">Reserved</span>
                        <span class="badge text-bg-danger" t-if="record.status.raw_value == 'checked_out'">Checked Out</span>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Bookings -->
        <record id="ipai_equipment_booking_tree" model="ir.ui.view">
            <field name="name">ipai.equipment.booking.tree</field>
            <field name="model">ipai.equipment.booking</field>
            <field name="arch" type="xml">
                <tree decoration-danger="is_overdue">
                    <field name="name"/>
                    <field name="requester_id"/>
                    <field name="project_id"/>
                    <field name="start_datetime"/>
                    <field name="end_datetime"/>
                    <field name="state"/>
                    <field name="is_overdue" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="ipai_equipment_booking_form" model="ir.ui.view">
            <field name="name">ipai.equipment.booking.form</field>
            <field name="model">ipai.equipment.booking</field>
            <field name="arch" type="xml">
                <form string="Equipment Booking">
                    <header>
                        <button name="action_request" type="object" string="Request"
                                invisible="state != 'draft'" class="btn-primary"/>
                        <button name="action_approve" type="object" string="Approve"
                                invisible="state != 'requested'" class="btn-primary"/>
                        <button name="action_check_out" type="object" string="Check Out"
                                invisible="state != 'approved'" class="btn-primary"/>
                        <button name="action_return" type="object" string="Return"
                                invisible="state != 'checked_out'" class="btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel"
                                invisible="state in ['returned', 'cancelled']" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,checked_out,returned"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="requester_id"/>
                                <field name="project_id"/>
                                <field name="purpose"/>
                            </group>
                            <group>
                                <field name="start_datetime"/>
                                <field name="end_datetime"/>
                                <field name="is_overdue" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Equipment">
                                <field name="equipment_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="serial_no"/>
                                        <field name="status"/>
                                        <field name="condition"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Booking Calendar View -->
        <record id="ipai_equipment_booking_calendar" model="ir.ui.view">
            <field name="name">ipai.equipment.booking.calendar</field>
            <field name="model">ipai.equipment.booking</field>
            <field name="arch" type="xml">
                <calendar string="Booking Calendar"
                          date_start="start_datetime"
                          date_stop="end_datetime"
                          color="requester_id"
                          event_open_popup="true">
                    <field name="requester_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record id="ipai_equipment_booking_action" model="ir.actions.act_window">
            <field name="name">Bookings</field>
            <field name="res_model">ipai.equipment.booking</field>
            <field name="view_mode">calendar,tree,form</field>
        </record>

        <!-- Incidents -->
        <record id="ipai_equipment_incident_tree" model="ir.ui.view">
            <field name="name">ipai.equipment.incident.tree</field>
            <field name="model">ipai.equipment.incident</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="equipment_id"/>
                    <field name="booking_id"/>
                    <field name="reported_by"/>
                    <field name="severity"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="ipai_equipment_incident_form" model="ir.ui.view">
            <field name="name">ipai.equipment.incident.form</field>
            <field name="model">ipai.equipment.incident</field>
            <field name="arch" type="xml">
                <form string="Equipment Incident">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="equipment_id"/>
                            <field name="booking_id"/>
                            <field name="reported_by"/>
                        </group>
                        <group>
                            <field name="severity"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ipai_equipment_incident_action" model="ir.actions.act_window">
            <field name="name">Incidents</field>
            <field name="res_model">ipai.equipment.incident</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
