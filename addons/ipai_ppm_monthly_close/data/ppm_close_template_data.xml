<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ============================================================ -->
        <!-- Monthly Close Task Templates                                -->
        <!-- Based on your closing sheet                                 -->
        <!-- ============================================================ -->

        <!-- RIM Tasks -->
        <record id="template_rim_rent_leases" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">10</field>
            <field name="task_category">Rent &amp; Leases</field>
            <field name="detailed_task">Process monthly rent and lease payments for RIM office space and equipment. Verify lease agreements, calculate pro-rated amounts, and prepare journal entries.</field>
            <field name="agency_code">RIM</field>
            <field name="owner_code">jtolentino</field>
            <field name="reviewer_code">jgtolentino</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">1.0</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- CKVC Tasks -->
        <record id="template_ckvc_accounts_payable" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">20</field>
            <field name="task_category">Accounts Payable</field>
            <field name="detailed_task">Review and reconcile all outstanding accounts payable for CKVC. Verify vendor invoices, process payments, and ensure proper accrual entries.</field>
            <field name="agency_code">CKVC</field>
            <field name="owner_code">ap_specialist</field>
            <field name="reviewer_code">jtolentino</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">1.5</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- BOM Tasks -->
        <record id="template_bom_payroll" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">30</field>
            <field name="task_category">Payroll Processing</field>
            <field name="detailed_task">Process monthly payroll for BOM employees. Calculate salaries, benefits, withholdings, and prepare BIR remittance forms (1601-C). Ensure compliance with Philippine labor laws.</field>
            <field name="agency_code">BOM</field>
            <field name="owner_code">payroll_admin</field>
            <field name="reviewer_code">hr_manager</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">2.0</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- JPAL Tasks -->
        <record id="template_jpal_revenue_recognition" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">40</field>
            <field name="task_category">Revenue Recognition</field>
            <field name="detailed_task">Review and recognize revenue for JPAL projects. Verify project milestones, calculate unbilled revenue, and prepare revenue journal entries per PFRS 15.</field>
            <field name="agency_code">JPAL</field>
            <field name="owner_code">revenue_analyst</field>
            <field name="reviewer_code">jtolentino</field>
            <field name="approver_code">cfo</field>
            <field name="prep_days">1.5</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- JLI Tasks -->
        <record id="template_jli_bank_reconciliation" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">50</field>
            <field name="task_category">Bank Reconciliation</field>
            <field name="detailed_task">Reconcile all JLI bank accounts. Match bank statements to ledger, investigate discrepancies, and prepare reconciling items journal entries.</field>
            <field name="agency_code">JLI</field>
            <field name="owner_code">treasury_analyst</field>
            <field name="reviewer_code">treasury_manager</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">1.0</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- JAP Tasks -->
        <record id="template_jap_fixed_assets" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">60</field>
            <field name="task_category">Fixed Assets Depreciation</field>
            <field name="detailed_task">Calculate and post monthly depreciation for JAP fixed assets. Review asset register, verify useful life assumptions, and prepare depreciation journal entries.</field>
            <field name="agency_code">JAP</field>
            <field name="owner_code">asset_accountant</field>
            <field name="reviewer_code">jtolentino</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">1.0</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- LAS Tasks -->
        <record id="template_las_inventory_count" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">70</field>
            <field name="task_category">Inventory Count</field>
            <field name="detailed_task">Conduct physical inventory count for LAS warehouses. Reconcile physical count to system, investigate variances, and prepare inventory adjustment entries.</field>
            <field name="agency_code">LAS</field>
            <field name="owner_code">warehouse_supervisor</field>
            <field name="reviewer_code">operations_manager</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">2.0</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- RMQB Tasks -->
        <record id="template_rmqb_expense_accruals" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">80</field>
            <field name="task_category">Expense Accruals</field>
            <field name="detailed_task">Review and book monthly expense accruals for RMQB. Identify unrecorded expenses, calculate accrual amounts, and prepare accrual journal entries.</field>
            <field name="agency_code">RMQB</field>
            <field name="owner_code">expense_analyst</field>
            <field name="reviewer_code">jtolentino</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">1.0</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

        <!-- Cross-Agency Tasks -->
        <record id="template_consolidated_reporting" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">90</field>
            <field name="task_category">Consolidated Reporting</field>
            <field name="detailed_task">Prepare consolidated financial statements for all 8 agencies. Eliminate intercompany transactions, reconcile balances, and generate management reports.</field>
            <field name="agency_code">RIM</field>
            <field name="owner_code">jtolentino</field>
            <field name="reviewer_code">cfo</field>
            <field name="approver_code">ceo</field>
            <field name="prep_days">2.0</field>
            <field name="review_days">1.0</field>
            <field name="approval_days">0.5</field>
        </record>

        <record id="template_bir_compliance" model="ppm.close.template">
            <field name="active" eval="True"/>
            <field name="sequence">100</field>
            <field name="task_category">BIR Compliance</field>
            <field name="detailed_task">Prepare and file monthly BIR returns (1601-C, 2550Q). Calculate withholding taxes, verify completeness, and submit to BIR via eFPS.</field>
            <field name="agency_code">RIM</field>
            <field name="owner_code">tax_specialist</field>
            <field name="reviewer_code">jtolentino</field>
            <field name="approver_code">finance_manager</field>
            <field name="prep_days">1.5</field>
            <field name="review_days">0.5</field>
            <field name="approval_days">0.5</field>
        </record>

    </data>
</odoo>
