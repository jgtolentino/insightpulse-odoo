<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence for HR Offboarding -->
    <record id="seq_hr_offboarding" model="ir.sequence">
        <field name="name">HR Offboarding Sequence</field>
        <field name="code">hr.offboarding</field>
        <field name="prefix">OFF/%(year)s/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Sequence for Final Pay Computation -->
    <record id="seq_hr_final_pay" model="ir.sequence">
        <field name="name">Final Pay Computation Sequence</field>
        <field name="code">hr.final.pay</field>
        <field name="prefix">FP/%(year)s/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo>
