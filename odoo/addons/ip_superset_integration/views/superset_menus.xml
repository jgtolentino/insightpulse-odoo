<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Superset Dashboards Root Menu -->
    <record id="menu_superset_root" model="ir.ui.menu">
        <field name="name">Superset BI</field>
        <field name="sequence">5</field>
        <field name="web_icon">ip_superset_integration,static/description/icon.png</field>
    </record>

    <!-- Dashboard Actions -->
    <record id="action_superset_dashboard_list" model="ir.actions.act_url">
        <field name="name">All Dashboards</field>
        <field name="url">https://superset.insightpulseai.net/superset/dashboard/list/</field>
        <field name="target">new</field>
    </record>

    <record id="action_superset_explore" model="ir.actions.act_url">
        <field name="name">Explore Data</field>
        <field name="url">https://superset.insightpulseai.net/superset/explore/</field>
        <field name="target">new</field>
    </record>

    <record id="action_superset_sql_lab" model="ir.actions.act_url">
        <field name="name">SQL Lab</field>
        <field name="url">https://superset.insightpulseai.net/superset/sqllab/</field>
        <field name="target">new</field>
    </record>

    <record id="action_superset_charts" model="ir.actions.act_url">
        <field name="name">Charts</field>
        <field name="url">https://superset.insightpulseai.net/superset/chart/list/</field>
        <field name="target">new</field>
    </record>

    <record id="action_superset_datasets" model="ir.actions.act_url">
        <field name="name">Datasets</field>
        <field name="url">https://superset.insightpulseai.net/superset/tablemodelview/list/</field>
        <field name="target">new</field>
    </record>

    <!-- Superset Sub-Menus -->
    <menuitem
        id="menu_superset_dashboards"
        name="Dashboards"
        parent="menu_superset_root"
        action="action_superset_dashboard_list"
        sequence="10"/>

    <menuitem
        id="menu_superset_explore"
        name="Explore"
        parent="menu_superset_root"
        action="action_superset_explore"
        sequence="20"/>

    <menuitem
        id="menu_superset_sql_lab"
        name="SQL Lab"
        parent="menu_superset_root"
        action="action_superset_sql_lab"
        sequence="30"/>

    <menuitem
        id="menu_superset_charts"
        name="Charts"
        parent="menu_superset_root"
        action="action_superset_charts"
        sequence="40"/>

    <menuitem
        id="menu_superset_datasets"
        name="Datasets"
        parent="menu_superset_root"
        action="action_superset_datasets"
        sequence="50"/>

    <!-- Replace default Dashboards menu with Superset redirect -->
    <record id="base.menu_board_root" model="ir.ui.menu">
        <field name="name">Dashboards (Superset)</field>
    </record>

    <!-- Add Superset action to default Dashboard menu -->
    <menuitem
        id="menu_dashboard_superset_link"
        name="Open Superset BI"
        parent="base.menu_board_root"
        action="action_superset_dashboard_list"
        sequence="1"/>

</odoo>
