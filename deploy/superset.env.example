# Superset Configuration
# Copy this file to superset.env and update values

# Database Configuration
SUPERSET_POSTGRES_DB=superset
SUPERSET_POSTGRES_USER=superset
SUPERSET_POSTGRES_PASSWORD=changeme_superset_db_password

# Superset Configuration
SUPERSET_SECRET_KEY=changeme_generate_random_secret_key_here
SUPERSET_HOST_PORT=8088

# Application Settings
SUPERSET_LOAD_EXAMPLES=no
SUPERSET_ENV=production

# Redis Configuration (for caching and async queries)
REDIS_HOST=superset-redis
REDIS_PORT=6379

# Odoo Database Connection (for data sources)
ODOO_DB_HOST=odoo-db
ODOO_DB_PORT=5432
ODOO_DB_NAME=odoo
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=changeme_odoo_db_password

# Reverse Proxy Settings (when using Caddy)
# Enable if accessing Superset via /superset path
# APPLICATION_ROOT=/superset
# PREFERRED_URL_SCHEME=https
# WTF_CSRF_ENABLED=True

# Feature Flags
FEATURE_ENABLE_TEMPLATE_PROCESSING=True
FEATURE_DASHBOARD_CROSS_FILTERS=True
FEATURE_DASHBOARD_NATIVE_FILTERS=True
