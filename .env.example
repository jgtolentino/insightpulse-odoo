# InsightPulse Odoo - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=odoo
POSTGRES_DB=odoo
POSTGRES_HOST=odoo-db
POSTGRES_PORT=5432

# ============================================================================
# Odoo Configuration
# ============================================================================
ODOO_ADMIN_PASSWORD=your_secure_admin_password_here
ODOO_DB_NAME=odoo
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=${POSTGRES_PASSWORD}
ODOO_DB_HOST=odoo-db
ODOO_DB_PORT=5432

# Worker configuration
WORKERS=4
MAX_CRON_THREADS=2

# Memory limits (in bytes)
LIMIT_MEMORY_HARD=2684354560  # 2.5 GB
LIMIT_MEMORY_SOFT=2147483648  # 2 GB

# Time limits (in seconds)
LIMIT_TIME_CPU=600
LIMIT_TIME_REAL=1200

# ============================================================================
# DigitalOcean Configuration
# ============================================================================
DIGITALOCEAN_TOKEN=dop_v1_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DROPLET_IP=165.227.10.178
REGISTRY=registry.digitalocean.com/insightpulse

# Project configuration
PROJECT_ID=29cde7a1-8280-46ad-9fdf-dea7b21a7825
PROJECT_NAME=fin-workspace

# App Platform IDs
MCP_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SUPERSET_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=https://spdtwktxdalcfigzeqrz.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_DB_PASSWORD=your_supabase_db_password_here
SUPABASE_PROJECT_REF=spdtwktxdalcfigzeqrz

# ============================================================================
# External Services
# ============================================================================
MCP_ENDPOINT=https://mcp.insightpulseai.net
SUPERSET_ENDPOINT=https://superset.insightpulseai.net
OCR_ENDPOINT=https://ocr.insightpulseai.net

# ============================================================================
# Philippines BIR Configuration
# ============================================================================
BIR_EFPS_USERNAME=your_bir_efps_username
BIR_EFPS_PASSWORD=your_bir_efps_password
BIR_EFPS_ENDPOINT=https://efps.bir.gov.ph

# ATP (Authorization to Print) Configuration
BIR_ATP_NUMBER=your_atp_number
BIR_ATP_DATE_ISSUED=2025-01-01
BIR_ATP_VALID_UNTIL=2025-12-31

# ============================================================================
# Finance SSC Agency Configuration
# ============================================================================
# Multi-agency codes
ENABLED_AGENCIES=RIM,CKVC,BOM,JPAL,JLI,JAP,LAS,RMQB
DEFAULT_AGENCY=RIM

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_FROM=noreply@insightpulseai.net
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/backups/odoo

# DigitalOcean Spaces (for off-site backups)
SPACES_KEY=your_spaces_access_key
SPACES_SECRET=your_spaces_secret_key
SPACES_ENDPOINT=sgp1.digitaloceanspaces.com
SPACES_BUCKET=insightpulse-backups
SPACES_REGION=sgp1

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_LEVEL=info
LOG_HANDLER=:INFO,werkzeug:WARN,odoo.http:INFO
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# ============================================================================
# Timezone
# ============================================================================
TZ=Asia/Manila

# ============================================================================
# Development/Staging Flags
# ============================================================================
ENVIRONMENT=production  # production, staging, development
DEBUG=false
DEV_MODE=false

# ============================================================================
# SSL Configuration
# ============================================================================
SSL_CERT_PATH=/etc/letsencrypt/live/erp.insightpulseai.net/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/erp.insightpulseai.net/privkey.pem

# ============================================================================
# Security
# ============================================================================
# Generate secure keys with: openssl rand -hex 32
SECRET_KEY=your_64_character_secret_key_here
JWT_SECRET=your_jwt_secret_here

# ============================================================================
# PaddleOCR Configuration (if using local OCR service)
# ============================================================================
PADDLE_OCR_ENDPOINT=http://ocr-service:8000
PADDLE_OCR_USE_GPU=true
PADDLE_OCR_MODEL=ch_PP-OCRv4

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit this file to version control
# 2. Keep a secure backup of this file
# 3. Rotate passwords regularly
# 4. Use strong, unique passwords for each service
# 5. For production, use secrets management (e.g., HashiCorp Vault)
