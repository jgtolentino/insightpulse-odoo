<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- MIS Report Template for Travel & Expense KPIs -->
        <record id="mis_report_te_kpis" model="mis.report">
            <field name="name">Travel &amp; Expense KPIs</field>
            <field name="description">Key Performance Indicators for T&amp;E Management</field>
        </record>

        <!-- KPI: Total Travel Expenses -->
        <record id="mis_report_kpi_travel_total" model="mis.report.kpi">
            <field name="report_id" ref="mis_report_te_kpis"/>
            <field name="sequence">10</field>
            <field name="name">travel_expenses_total</field>
            <field name="description">Total Travel Expenses</field>
            <field name="expression">balp[('account_id.code', '=like', '611%')]</field>
            <field name="type">num</field>
        </record>

        <!-- KPI: Meals & Entertainment -->
        <record id="mis_report_kpi_meals_total" model="mis.report.kpi">
            <field name="report_id" ref="mis_report_te_kpis"/>
            <field name="sequence">20</field>
            <field name="name">meals_entertainment_total</field>
            <field name="description">Meals &amp; Entertainment</field>
            <field name="expression">balp[('account_id.code', '=', '6120')]</field>
            <field name="type">num</field>
        </record>

        <!-- KPI: Outstanding Cash Advances -->
        <record id="mis_report_kpi_cash_advances" model="mis.report.kpi">
            <field name="report_id" ref="mis_report_te_kpis"/>
            <field name="sequence">30</field>
            <field name="name">cash_advances_outstanding</field>
            <field name="description">Outstanding Cash Advances</field>
            <field name="expression">bals[('account_id.code', '=', '1210')]</field>
            <field name="type">num</field>
        </record>

        <!-- KPI: Average Processing Time (placeholder for custom computation) -->
        <record id="mis_report_kpi_avg_processing" model="mis.report.kpi">
            <field name="report_id" ref="mis_report_te_kpis"/>
            <field name="sequence">40</field>
            <field name="name">avg_expense_processing_days</field>
            <field name="description">Avg Expense Processing (Days)</field>
            <field name="expression">0</field>  <!-- Requires custom Python expression -->
            <field name="type">num</field>
        </record>

    </data>
</odoo>
