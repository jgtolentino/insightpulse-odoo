<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Travel & Expense Accounts (Philippine Chart of Accounts) -->

        <!-- Expense Accounts -->
        <record id="account_expense_travel" model="account.account">
            <field name="code">6110</field>
            <field name="name">Travel Expenses - Domestic</field>
            <field name="account_type">expense</field>
            <field name="reconcile" eval="False"/>
        </record>

        <record id="account_expense_travel_foreign" model="account.account">
            <field name="code">6115</field>
            <field name="name">Travel Expenses - Foreign</field>
            <field name="account_type">expense</field>
            <field name="reconcile" eval="False"/>
        </record>

        <record id="account_expense_meals" model="account.account">
            <field name="code">6120</field>
            <field name="name">Meals &amp; Entertainment</field>
            <field name="account_type">expense</field>
            <field name="reconcile" eval="False"/>
        </record>

        <record id="account_expense_accommodation" model="account.account">
            <field name="code">6125</field>
            <field name="name">Accommodation</field>
            <field name="account_type">expense</field>
            <field name="reconcile" eval="False"/>
        </record>

        <record id="account_expense_transport" model="account.account">
            <field name="code">6130</field>
            <field name="name">Transportation &amp; Fuel</field>
            <field name="account_type">expense</field>
            <field name="reconcile" eval="False"/>
        </record>

        <!-- Cash Advance Accounts -->
        <record id="account_cash_advance_receivable" model="account.account">
            <field name="code">1210</field>
            <field name="name">Cash Advances to Employees</field>
            <field name="account_type">asset_current</field>
            <field name="reconcile" eval="True"/>
        </record>

        <record id="account_cash_advance_payable" model="account.account">
            <field name="code">2110</field>
            <field name="name">Cash Advance Payable</field>
            <field name="account_type">liability_current</field>
            <field name="reconcile" eval="True"/>
        </record>

    </data>
</odoo>
