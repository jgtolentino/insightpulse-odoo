<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_ip_te_dashboard_form" model="ir.ui.view">
    <field name="name">ip.te.dashboard.form</field>
    <field name="model">ip.te.dashboard</field>
    <field name="arch" type="xml">
      <form string="T&amp;E Admin Dashboard" create="false" edit="false">
        <sheet>
          <group col="4">
            <field name="pending_approvals" readonly="1"/>
            <field name="open_cash_advances" readonly="1"/>
            <field name="overdue_liquidations" readonly="1"/>
            <field name="ocr_queue" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="action_ip_te_dashboard" model="ir.actions.act_window">
    <field name="name">T&amp;E Admin Dashboard</field>
    <field name="res_model">ip.te.dashboard</field>
    <field name="view_mode">form</field>
    <field name="target">current</field>
  </record>
</odoo>
