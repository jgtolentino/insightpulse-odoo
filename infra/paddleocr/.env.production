# PaddleOCR Service - Production Environment Variables

# Application
APP_NAME=paddleocr-service
APP_VERSION=1.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO

# OCR Configuration
OCR_LANGUAGE=en,zh_CN
OCR_USE_GPU=false
OCR_ENABLE_MKLDNN=true
MAX_IMAGE_SIZE=10485760  # 10MB
WORKERS=2

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL=3600  # 1 hour

# API Configuration
API_KEY=your-api-key-here  # Change this!
ALLOWED_ORIGINS=https://insightpulseai.net,https://odoo-saas-platform-xxxxx.ondigitalocean.app

# Resource Limits
MAX_WORKERS=2
WORKER_TIMEOUT=60
MAX_REQUESTS_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
